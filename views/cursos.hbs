{{!-- Funcion para tomar los datos del Modal --}}

<script>
  $(document).ready(function() {

    
// Modal del delete
    $('#tabla').on('click', '.delete', function (){

      let idCurso = $(this).data('id');
      $('#DeleteModal').modal('show')
    })  


// Modal del update
    $('#tabla').on('click', '.edit', function (){

      let idCurso = $(this).data('idCurso');
      let curso = $(this).data('curso');
      let modalidad = $(this).data('modalidad');
      let fecha_inicio= $(this).data('fecha_inicio')

      $('#EditModal').modal('show');
      $('.curso').val(curso);
      $('.modalidad').val(modalidad);
      $('.fecha_inicio').val(fecha_inicio);
    }) 
})
</script>

