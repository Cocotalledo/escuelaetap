{{!-- Modal (ventanita de aviso que aparece) para Delete --}}
<form action="/delete" method="post">
  <div class="modal" id="DeleteModal" role="dialog" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Eliminar curso del listado</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>¿Está seguro que desea eliminar este curso del listado?</p>
        </div>

        <div class="modal-footer">
          <input type="number" name="idCurso" id="idCurso" class="idCurso" required>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
          <button type="submit" class="btn btn-danger">Eliminar</button>
        </div>

      </div>
    </div>
  </div>
</form>


{{!-- Modal para Update --}}
<form action="/update" method="post">
  <div class="modal fade" id="EditModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Editar producto</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

            <div class="mb-3">
              <label for="curso" class="col-form-label">Curso</label>
              <input type="text" class="form-control curso" id="curso" name="curso">
            </div>

            <div class="mb-3">
              <label for="modalidad" class="col-form-label">Modalidad</label>
              <input type="text" class="form-control modalidad" id="modalidad" name="modalidad">
            </div>

            <div class="mb-3">
              <label for="fecha_inicio" class="col-form-label">Fecha de inicio</label>
              <input type="text" class="form-control fecha_inicio" id="fecha_inicio" name="fecha_inicio">
            </div>

        </div>
        <div class="modal-footer">
          <input type="number" name="idCurso" id="idCurso" class="idCurso">

          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
          <button type="submit" class="btn btn-primary">Editar</button>
        </div>
      </div>
    </div>
  </div>
</form>



